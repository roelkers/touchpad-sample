{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "yarn --prefix \"$RESOURCE_DIR\" run lint",
      "yarn --prefix \"$RESOURCE_DIR\" run build"
    ]

  }
}
